{
  "name": "Ask Facebook ",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Experimental Facebook Graph Search Engine chrome extension",
  "homepage_url": "http://github.com",
  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*"],
      "js": ["src/console/content.script.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["src/console/background.js"],
    "persistent": false
  },
  "default_locale": "en",
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "icons/icon48.png",
      "38": "icons/icon48.png"
    },
    "default_popup": "src/index.html"
  },
  "omnibox": {
    "keyword": "askfacebook"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "icons/icon128.png"
  ]
}